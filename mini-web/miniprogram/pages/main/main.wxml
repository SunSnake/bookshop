
<view class="container" xmlns:wx="http://www.w3.org/1999/xhtml">

  <van-sticky class="width_100">
    <van-search value="{{ value }}" placeholder="请输入搜索关键词" />
  </van-sticky>

  <scroll-view scroll-y='true' bindscrolltolower='loadPage' class="bottom_tar_distance">
    <div class="item-show-block padding_LR width_100" wx:for="{{items}}" wx:key="uid" wx:for-item="item"
         bindtap="showItemDetail" data-item="{{item}}">

      <image class="image-class" src="{{item.image}}" mode="aspectFill"></image>
      <div class="description-class width_100">{{item.name}}</div>
    </div>
  </scroll-view>

</view>
